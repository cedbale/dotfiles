[user]
  name = NAME
  email = EMAIL
[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  di = diff --ignore-space-at-eol -b -w --ignore-blank-lines
  dc = diff --ignore-space-at-eol -b -w --ignore-blank-lines --cached
  ds = diff --ignore-space-at-eol -b -w --ignore-blank-lines --staged
  cia = commit --amend
  g = grep --break --heading --line-number
  mod = "!git status --porcelain | awk '{print $2}'"
  up = "!git remote update -p; git merge --ff-only @{u}"
  pom = pull origin master
[color]
  diff = auto
  status = auto
  branch = auto
[core]
  excludesfile = HOME/.gitignore
  autocrlf = input
  editor = vim
[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[github]
  user = GITHUB
[push]
  default = simple
[grep]
  extendregexp = true
  linenumber = true
