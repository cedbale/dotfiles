[user]
  name = NAME
  email = EMAIL
[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  di = diff --ignore-space-at-eol -b -w --ignore-blank-lines 
  dc = di --cached
  ds = di --staged
  cia = commit --amend
  g = grep --break --heading --line-number
  mod = "!git status --porcelain | awk '{print $2}'"
[color]
  diff = auto
  status = auto
  branch = auto
[core]
  excludesfile = HOME/.gitignore
  autocrlf = input
  editor = vim
[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[github]
  user = GITHUB
[push]
  default = simple
[grep]
  extendregexp = true
  linenumber = true
