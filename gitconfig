[user]
  name = NAME
  email = EMAIL
[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  di = diff
  dc = diff --cached
  ds = diff --staged
  cia = commit --ammend
  aa = add --all
  lg = log --color --graph --oneline --all --abbrev-commit --
  g = grep --break --heading --line-number
[color]
  diff = auto
  status = auto
  branch = auto
[core]
  excludesfile = HOME/.gitignore
  autocrlf = input
  editor = vim
  pager = less -F -X -r
[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[github]
  user = GITHUB
[push]
  default = current
[grep]
  extendRegexp = true
  lineNumber = true

